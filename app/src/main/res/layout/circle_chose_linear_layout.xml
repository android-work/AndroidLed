<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_chose_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/color_select_bg"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_color_white"/>

        <ImageView
            android:id="@+id/iv_chose_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_color_red"/>

        <ImageView
            android:id="@+id/iv_chose_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_color_yellow"/>

        <ImageView
            android:id="@+id/iv_chose_4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/text_color_green"/>

        <ImageView
            android:id="@+id/iv_chose_5"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/text_color_blue"/>

        <ImageView
            android:id="@+id/iv_chose_6"
            android:layout_marginLeft="10dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/text_color_black"/>
    </LinearLayout>


</LinearLayout>